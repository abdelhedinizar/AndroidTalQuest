<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp">


        <include
            android:id="@+id/jobTitle"
            layout="@layout/edittext_step_layout" />

        <include
            android:id="@+id/missionDescription"
            layout="@layout/edittext_step_layout" />


        <include
            android:id="@+id/companyName"
            layout="@layout/edittext_step_layout" />

        <include
            android:id="@+id/companyDescription"
            layout="@layout/edittext_step_layout" />

        <include
            android:id="@+id/sector"
            layout="@layout/screen3" />

        <include
            android:id="@+id/profilSearch"
            layout="@layout/edittext_step_layout" />

        <include
            android:id="@+id/experience"
            layout="@layout/screen3" />

        <include
            android:id="@+id/salary"
            layout="@layout/edittext_step_layout" />

        <include
            android:id="@+id/rewardchoosen"
            layout="@layout/screen3" />

        <include
            android:id="@+id/ngo"
            layout="@layout/screen3" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <include
                android:id="@+id/availability"
                layout="@layout/screen3" />
        </RelativeLayout>

        <Button
            android:id="@+id/postulate"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="postulate"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>
</ScrollView>
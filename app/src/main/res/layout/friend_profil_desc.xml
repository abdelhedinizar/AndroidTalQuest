<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/navigation_background" />

            <com.mikepenz.materialdrawer.view.BezelImageView
                android:id="@+id/profilImageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:cropToPadding="true"
                android:elevation="64dp"
                android:scaleType="centerCrop"
                android:src="@drawable/seif"
                android:transitionName="myImage" />

            <FrameLayout
                android:id="@+id/frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/frame1"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="120dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="64dp"
                    android:text="family"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/familyButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:elevation="150dp" />
                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="40dp"
                android:elevation="50dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/friendsButton"
                    android:layout_width="60dp"
                    android:layout_height="64dp"
                    app:backgroundTint="@color/blueciel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="16dp"
                    android:text="Friends"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="80dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/educationButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:backgroundTint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="16dp"
                    android:text="Education"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="70dp"
                android:layout_marginTop="40dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/workButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    app:backgroundTint="@color/grisa"
                    app:borderWidth="0dp"
                    app:elevation="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:elevation="8dp"
                    android:text="Work"
                    android:textColor="#FFFFFF"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </FrameLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="225dp"
                android:src="@drawable/ic_note"
                app:backgroundTint="@color/blueciel"
                />
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="300dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line" />


        <Button
            android:id="@+id/referButton"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sign_in_button_style"
            android:text="refer"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/sectorLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_marginRight="10pt"
                android:src="@android:drawable/ic_input_get" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Sector :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sectorProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5pt"
                android:text="informatique,internet and telecom" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/companyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_marginRight="10pt"
                android:src="@android:drawable/btn_star_big_off" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="company :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/companyProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5pt"
                android:text="Forsyslab" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/coutryLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="10pt"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:layout_marginRight="10pt"
                android:src="@android:drawable/ic_dialog_map" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Country :"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countryProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5pt"
                android:text="Tunisia" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>